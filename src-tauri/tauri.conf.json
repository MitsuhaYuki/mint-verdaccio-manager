{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Verdaccio Server Manager",
  "version": "../package.json",
  "identifier": "com.tihus.mint.verdaccio",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Verdaccio 服务器管理",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "maxWidth": 1366,
        "maxHeight": 768,
        "backgroundColor": "#000",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "externalBin": ["binaries/node"],
    "resources": {
      "resources/node_modules": "node_modules"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
